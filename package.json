{
  "name": "spaceship-battle-log",
  "version": "1.0.0",
  "description": "Spaceship battle log for logging space battles and encounters.",
  "author": "Brendan Leu",
  "type": "module",
  "scripts": {
    "build:sass": "npx sass src/scss/main.scss public/css/main.css --style compressed",
    "watch:sass": "npx sass --watch src/scss:public/css --style compressed",
    "build:ts": "npx tsc --build --verbose",
    "build": "npm run build:sass && npm run build:ts",
    "start:ts": "nodemon --exec node --loader ts-node/esm src/server.ts",
    "start:dev": "npm-run-all --parallel watch:sass start:ts",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "bulma": "^1.0.4",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "mime": "^2.6.0",
    "mongoose": "^8.18.1",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.5.2",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-local": "^1.0.38",
    "@types/passport-local-mongoose": "^6.1.5",
    "npm-run-all": "^4.1.5",
    "sass": "^1.93.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
